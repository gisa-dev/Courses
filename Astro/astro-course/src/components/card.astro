---
interface Props {
	title?: string;
	content?: string;
}

const {title = 'Default title', content = 'Default content'}: Props =
	Astro.props;
---

<div class="card">
	<h2>{title}</h2>
	<p>
		{content}
	</p>
</div>

<style>
	.card {
		background-color: #ffff;
		border-radius: 0.625rem;
		box-shadow: 0 0.125rem 0.25rem 0 rgba(0, 0, 0, 0.2),
			0 1.5625rem 3.125rem 0 rgba(0, 0, 0, 0.2);
		color: #252525;
		padding: 0.3125rem;
		margin-bottom: 0.3125rem;
		width: 18.75rem;
	}
</style>
