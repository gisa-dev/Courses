---
const response = await fetch('https://jsonplaceholder.typicode.com/posts');

const posts = await response.json();
---

<h1>Mis posts</h1>

{
	posts.map(({userId, title, body}) => (
		<div>
			<span>{userId}</span>
			<h2 class="title">{title}</h2>
			<p class="content">{body}</p>
		</div>
	))
}

<style>
	.title {
		color: skyblue;
	}

	.content {
		color: #333;
	}
</style>
