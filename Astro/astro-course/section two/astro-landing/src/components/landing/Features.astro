---
import features from '../../config/features.json';
---

<h1 class="text-5xl font-bold text-center mt-10">Features</h1>

<div class="grid mx-5 sm:mx-0 sm:grid-cols-3 gap-5 my-10">
	{
		features.map(({title, description}) => (
			<div class="bg-slate-800 p-10 rounded-xl hover:bg-slate-700 hover:scale-105 transition-transform ease-in-out duration-300">
				<h2 class="text-2xl font-bold my-4">{title}</h2>
				<p>{description}</p>
			</div>
		))
	}
</div>
