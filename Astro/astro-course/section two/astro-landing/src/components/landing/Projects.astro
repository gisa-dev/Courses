---
import projects from '../../config/projects.json';
---

<h2 class="font-bold text-5xl my-5 text-center">Projects</h2>

{
	projects.map(({title, description, images}) => (
		<div class="flex text-center sm:text-left flex-col sm:flex-row">
			<div class="flex-1 ">
				<h3 class="font-bold text-2xl my-4">{title}</h3>
				<p class="my-2">{description}</p>
				<button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 rounded-md transition ease-in-out duration-300">
					More Info
				</button>
			</div>
			<div class="flex-1 my-2 ">
				<img src={images} alt={title} class="w-72 m-auto rounded-xl" />
			</div>
		</div>
	))
}
